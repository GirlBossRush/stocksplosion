[data-component="stock"]
  align-items center
  background-color #fefefe
  flex-flow row
  border-right 3px #222 solid

  &:hover
    filter brightness(98%)

  & + [data-component="stock"] .primary,
  & + [data-component="stock"] .symbol
    border-top 1px solid #ddd

  .symbol
    color #fefefe
    background-color #000
    flex 0 0 auto
    padding 1em

    & .primary
      margin-left 1em

  .primary
    align-items center
    flex 1 1 auto
    justify-content space-between
    padding 1em
    position relative

    .label
      font-variant small-caps
      right 0.5em
      position absolute
      text-decoration underline
      top 0.2em


